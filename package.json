{
  "name": "electron-auth-app",
  "version": "1.0.0",
  "description": "Electron authentication app with React and Tailwind",
  "main": "main.js",
  "author": "Your Name",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run electron:build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "electron .",
    "electron:build": "electron-builder -c.extraMetadata.main=build/main.js"
  },
  "build": {
    "appId": "com.electron.auth.app",
    "productName": "Electron Auth App",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  },
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "^25.8.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "sharp": "^0.33.1",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
