{
  "name": "electron-auth-app",
  "version": "1.0.0",
  "description": "Electron authentication app with React and Tailwind",
  "main": "main.js",
  "author": "Your Name",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "build": "npm run react-build && electron-builder build --win",
    "build:win": "npm run react-build && electron-builder build --win",
    "build:mac": "npm run react-build && electron-builder build --mac",
    "build:linux": "npm run react-build && electron-builder build --linux"
  },
  "build": {
    "appId": "com.electron.auth.app",
    "productName": "Electron Auth App",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "main.js",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/logo.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Your Name"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Electron Auth App",
      "uninstallDisplayName": "Electron Auth App"
    }
  },
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "^25.8.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
